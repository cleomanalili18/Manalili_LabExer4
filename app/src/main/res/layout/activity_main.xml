<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cleo.manalili_labexer4.MainActivity">

    <EditText
        android:id="@+id/etmessage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etmessage"
        android:onClick="saveStorage"
        android:text="SAVE" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsave"
        android:layout_alignBottom="@+id/btnsave"
        android:layout_centerHorizontal="true"
        android:onClick="clear"
        android:text="CLEAR"/>

    <Button
        android:id="@+id/btndisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="displayStorage"
        android:layout_alignBaseline="@+id/btnclear"
        android:layout_alignBottom="@+id/btnclear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="DISPLAY"/>

    <TextView
        android:id="@+id/tvmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
